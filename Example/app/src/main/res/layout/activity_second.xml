<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="64sp"
        android:layout_marginTop="30dp"
        android:id="@+id/textViewCompteurSecond"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub"
        android:id="@+id/buttonSub"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textViewCompteurSecond"
        android:layout_toRightOf="@+id/textViewCompteurSecond"
        android:layout_toEndOf="@+id/textViewCompteurSecond" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:id="@+id/buttonPrevious"
        android:layout_alignBaseline="@+id/buttonSub"
        android:layout_alignBottom="@+id/buttonSub"
        android:layout_toLeftOf="@+id/textViewCompteurSecond"
        android:layout_toStartOf="@+id/textViewCompteurSecond" />

</RelativeLayout>